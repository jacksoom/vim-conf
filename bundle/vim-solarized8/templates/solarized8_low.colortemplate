# Default highlight groups {{{
verbatim
if !has('gui_running') && get(g:, '@optionprefix_termtrans', 0)
endverbatim

  # Transparent background
  Normal             base0             none
  FoldColumn         base0             none
  Folded             base0             none              bold s=base03
  LineNr             base01            none
  Terminal           fg                none

verbatim
hi CursorLineNr ctermbg=NONE guifg=NONE
else
endverbatim

  # Opaque background
